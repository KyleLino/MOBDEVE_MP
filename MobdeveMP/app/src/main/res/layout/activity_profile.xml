<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:background="@drawable/slantedbars">

    <TextView
        android:id="@+id/textusername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:gravity="left"
        android:shadowColor="#2E2E2E"
        android:shadowDx="2"

        android:shadowDy="2"
        android:shadowRadius="1"
        android:text="Username"
        android:textColor="#6D6D6D"
        android:textSize="35dp"
        android:typeface="sans"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <ImageView
        android:id="@+id/profileimage"
        android:layout_width="370dp"
        android:layout_height="151dp"
        android:layout_marginStart="23dp"

        android:layout_marginTop="72dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/gachi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textusername" />

    <TextView
        android:id="@+id/fandoms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2F606060"
        android:clickable="true"
        android:gravity="center"
        android:text="Your Fandoms"
        android:textColor="#2B82DD"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.665" />

    <TextView
        android:id="@+id/usercollections"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2F606060"
        android:clickable="true"
        android:gravity="center"
        android:text="User Collections"
        android:textColor="#2B82DD"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.519" />

    <TextView
        android:id="@+id/viewcollections"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2F606060"
        android:clickable="true"
        android:gravity="center"
        android:text="Your Collections"
        android:textColor="#2B82DD"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.47" />

    <TextView
        android:id="@+id/tradeoffers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2F606060"
        android:clickable="true"
        android:gravity="center"
        android:text="Trade Offers"
        android:textColor="#2B82DD"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.616" />

    <TextView
        android:id="@+id/wishlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2F606060"
        android:clickable="true"
        android:gravity="center"
        android:text="View Wishlist"
        android:textColor="#2B82DD"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.568" />

    <TextView
        android:id="@+id/qrscanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2F606060"
        android:clickable="true"
        android:gravity="center"
        android:text="Scan QR"
        android:textColor="#2B82DD"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.715" />

    <Button
    android:id="@+id/editprofile"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:backgroundTint="#DBA06B"

    android:text="Edit Profile"
    android:textColor="@android:color/white"

    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintHorizontal_bias="0.742"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.866" />

    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#DBA06B"
        android:textColor="@android:color/white"

        android:text="Logout"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.287"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.866" />




</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FandomActivity"
    android:background="@drawable/slanted_dark">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/lato_bold"
        android:gravity="center"
        android:text="Manage Fandoms"
        android:textColor="#d6d6d6"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/profileback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:text="Profile"
        android:textColor="#d6d6d6"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.952"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.008" />


    <LinearLayout
        android:id="@+id/fandom_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2">

        <LinearLayout
            android:gravity="center"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView2">


            <CheckBox
                android:id="@+id/checkBoxG7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GOT7"
                android:fontFamily="@font/mokoto"
                android:textColor="#d6d6d6"
                android:paddingStart="5dp"
                android:textSize="17sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/checkBoxEG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EVERGLOW"
                android:fontFamily="@font/mokoto"
                android:textColor="#d6d6d6"
                android:paddingStart="5dp"
                android:textSize="17sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/checkBoxBP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BLACKPINK"
                android:fontFamily="@font/mokoto"
                android:textColor="#d6d6d6"
                android:paddingStart="5dp"
                android:textSize="17sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/checkBoxRV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RED VELVET"
                android:fontFamily="@font/mokoto"
                android:textColor="#d6d6d6"
                android:paddingStart="5dp"
                android:textSize="17sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/checkBoxMMOO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MAMAMOO"
                android:fontFamily="@font/mokoto"
                android:textColor="#d6d6d6"
                android:paddingStart="5dp"
                android:textSize="17sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView2">

            <CheckBox
                android:id="@+id/checkBoxTWICE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TWICE"
                android:fontFamily="@font/mokoto"
                android:textColor="#d6d6d6"
                android:paddingStart="5dp"
                android:textSize="17sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/checkBoxW1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="WANNAONE"
                android:fontFamily="@font/mokoto"
                android:textColor="#d6d6d6"
                android:paddingStart="5dp"
                android:textSize="17sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/checkBoxNCT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NCT"
                android:fontFamily="@font/mokoto"
                android:textColor="#d6d6d6"
                android:paddingStart="5dp"
                android:textSize="17sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/checkBoxBTS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BTS"
                android:fontFamily="@font/mokoto"
                android:textColor="#d6d6d6"
                android:paddingStart="5dp"
                android:textSize="17sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/checkBoxEXO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EXO"
                android:fontFamily="@font/mokoto"
                android:textColor="#d6d6d6"
                android:paddingStart="5dp"
                android:textSize="17sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <CheckBox
        android:id="@+id/checkBoxOTHERS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="OTHERS"
        android:fontFamily="@font/mokoto"
        android:textColor="#d6d6d6"
        android:paddingStart="5dp"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fandom_list" />

    <Button
        android:fontFamily="@font/montserrat_bold"
        android:id="@+id/buttonSAVE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="#E66E00"
        android:text="SAVE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/checkBoxOTHERS" />





</androidx.constraintlayout.widget.ConstraintLayout>